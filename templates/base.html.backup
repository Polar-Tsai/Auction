        {% else %}
          <a href="{% url 'auctions:login' %}" class="mr-4 text-sm text-blue-600 font-bold">{% trans "å“¡å·¥ç™»å…¥" %}</a>
          <a href="{% url 'auctions:admin_login' %}" class="text-sm text-gray-500">{% trans "ç®¡ç†å“¡ç™»å…¥" %}</a>
        {% endif %}
        </div>
      </div>
    </header>

    <!-- Mobile Header (Portrait) -->
    <header class="mobile-header justify-between items-center mb-4" style="display: none;">
      <a href="{% url 'auctions:products_list' %}" class="flex items-center gap-2 no-underline hover:opacity-80 transition">
        <img src="{% static 'images/logo.svg' %}" alt="Logo" class="h-8 w-8">
        <div class="text-lg font-bold text-gray-900">é¾èˆŸè¨ˆç•« - {% trans "ç«¶æ‹ç¶²ç«™" %}</div>
      </a>
      <button id="hamburger-btn" class="p-2">
        <!-- Hamburger Icon -->
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
