          {% endif %}

          <!-- Navigation Links (if logged in as employee) -->
          {% if employee %}
            <hr class="my-4">
            <a href="{% url 'auctions:products_list' %}" class="block py-3 px-4 hover:bg-gray-50 rounded-lg">
              {% trans "æ‹è³£æ¸…å–®" %}
            </a>
            <a href="{% url 'auctions:user_bids_list' %}" class="block py-3 px-4 hover:bg-gray-50 rounded-lg">
              {% trans "ä¸‹æ¨™ç´€éŒ„" %}
