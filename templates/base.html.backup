            <a href="{% url 'auctions:logout' %}" class="block py-3 px-4 hover:bg-gray-50 rounded-lg text-red-600">
              {% trans "ç™»å‡º" %}
            </a>
          {% endif %}
        </div>
      </div>
    </div>

    <!-- Hidden form for language switching -->
    <form id="language-form" method="post" action="{% url 'set_language' %}" style="display: none;">
      {% csrf_token %}
      <input name="next" type="hidden" value="{{ request.path }}">
      <input name="language" type="hidden" id="language-input">
    </form>

    <script>
      // Switch language function
      function switchLanguage(langCode) {
        document.getElementById('language-input').value = langCode;
        document.getElementById('language-form').submit();
      }

      // Toggle language options in mobile menu
      function toggleLanguageMenu(event) {
        event.stopPropagation();
        const languageOptions = document.getElementById('language-options');
        languageOptions.classList.toggle('hidden');
      }

      function openHamburgerMenu() {
        document.getElementById('hamburger-menu').classList.add('open');
        document.getElementById('hamburger-overlay').classList.add('open');
        document.body.style.overflow = 'hidden';
      }

      function closeHamburgerMenu() {
        document.getElementById('hamburger-menu').classList.remove('open');
        document.getElementById('hamburger-overlay').classList.remove('open');
        document.body.style.overflow = '';
        // Also hide language options when closing menu
        document.getElementById('language-options').classList.add('hidden');
      }

      // Hamburger button click handler
      const hamburgerBtn = document.getElementById('hamburger-btn');
      if (hamburgerBtn) {
        hamburgerBtn.addEventListener('click', openHamburgerMenu);
      }

      // Prevent menu clicks from closing the menu
      document.getElementById('hamburger-menu').addEventListener('click', function(e) {
        e.stopPropagation();
      });
    </script>

    {% block content %}{% endblock %}
  </div>
</body>
</html>